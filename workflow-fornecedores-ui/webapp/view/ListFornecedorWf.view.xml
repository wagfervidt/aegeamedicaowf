<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns="sap.m"
    xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
    controllerName="com.br.aegea.wfaprovacao.workflowfornecedoresui.controller.ListFornecedorWf">
    <App id="app">
        <pages>
            <Page showHeader="false" showFooter="false">
                <content>
                    <uxap:ObjectPageLayout class="sapUiSizeCompact">
                        <uxap:headerTitle>
                            <uxap:ObjectPageHeader objectTitle="Lançar Medições" objectSubtitle=""
                                showPlaceholder="true">


                            </uxap:ObjectPageHeader>
                        </uxap:headerTitle>
                        <uxap:headerContent>
                            <VBox>
                                <items>
                                    <Title text="Contrato: {oViewModel>/sContrato}" />
                                    <Title text="N° Medição: {oViewModel>/sNumeroMedicao}" />
                                    <Title text="Perído Medição: {oViewModel>/sPeriod}" />
                                </items>
                            </VBox>
                        </uxap:headerContent>
                        <uxap:sections>

                            <uxap:ObjectPageSection>
                                <uxap:subSections>
                                    <uxap:ObjectPageSubSection>
                                        <uxap:blocks>
                                            <ScrollContainer width="100%"
                                            >
                                                <Table id="idEditMedicao"
                                                    width="120rem"
                                                    items="{ path:'ListModel>/' }"
                                                >

                                                    <columns>
                                                        <Column
                                                            width="5%">
                                                            <header>
                                                                <Text text="Status" />
                                                            </header>
                                                        </Column>
                                                        <Column
                                                            width="5%">
                                                            <header>
                                                                <Text text="Item" />
                                                            </header>
                                                        </Column>
                                                        <Column width="7%">
                                                            <header>
                                                                <Text text="Projeto" />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="PEP" />
                                                            </header>
                                                        </Column>
                                                        <Column width="10%">
                                                            <header>
                                                                <Text text="Descrição Item"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Mês" />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Valor Mês" />
                                                            </header>
                                                        </Column>
                                                        <Column width="7%">
                                                            <header>
                                                                <Text text="Mês Confirmação"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column width="7%">
                                                            <header>
                                                                <Text text="Valor Mês Confirmação"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Acum. Anterior Qtd" />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Qtd Total" />
                                                            </header>
                                                        </Column>
                                                        <Column width="10%">
                                                            <header>
                                                                <Text text="Acum. Anterior - Valor"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Previsto" />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Acum. Total Mês"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Acum. Total"
                                                                />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Unid" />
                                                            </header>
                                                        </Column>
                                                        <Column>
                                                            <header>
                                                                <Text text="Valor Unit."
                                                                />
                                                            </header>
                                                        </Column>
                                                    </columns>
                                                    <items>
                                                        <ColumnListItem type="Active">
                                                            <cells>
                                                                <Select id="_IDGenSelect1"
                                                                    forceSelection="false"
                                                                    selectedKey="{ListModel>StatusSelected}"
                                                                    items="{path: 'oViewModel>/StatusOptions'}"
                                                                    change=".handleChangeStatus">
                                                                    <core:Item id="_IDGenItem1"
                                                                        key="{oViewModel>Name}"
                                                                        text="{oViewModel>Name}" />
                                                                </Select>
                                                                <ObjectStatus
                                                                    text="{ListModel>Ebelp}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>Txz01}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ObjetoCusto}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>Ktext1}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>QtdMedir}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ValorMes}" />
                                                                <Input
                                                                    text="{ListModel>MesConfirmacao}"
                                                                    editable="{= ${ListModel>StatusSelected} === 'NOK'}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ValorMesConfirmacao}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>QuantidadeMesAnterior}" />
                                                                <ObjectStatus text="" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ValorMesAnterior}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ValorTotalPrevisto}" />
                                                                <ObjectStatus text="" />
                                                                <ObjectStatus
                                                                    text="{ListModel>QuantidadeMedida}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>Meins}" />
                                                                <ObjectStatus
                                                                    text="{ListModel>ValorUnitario}" />
                                                            </cells>
                                                        </ColumnListItem>
                                                    </items>
                                                </Table>
                                            </ScrollContainer>
                                        </uxap:blocks>
                                    </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                            </uxap:ObjectPageSection>
                            <uxap:ObjectPageSection title="">
                                <uxap:subSections>
                                    <uxap:ObjectPageSubSection title="">
                                    </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                            </uxap:ObjectPageSection>
                        </uxap:sections>
                        <uxap:footer>
                            <OverflowToolbar design="auto">
                                <content>
                                    <ToolbarSpacer />
                                    <Button text="Save" type="Emphasized"
                                        iconDensityAware="false" />
                                    <Button text="Cancel"
                                        iconDensityAware="false" />
                                </content>
                            </OverflowToolbar>
                        </uxap:footer>
                    </uxap:ObjectPageLayout>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>